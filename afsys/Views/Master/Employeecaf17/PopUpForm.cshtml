    function eventApprovalPo() {
        if ($("#approval_po_tmp").prop("checked")) {
            $("input[name='APPROVAL_PO']").val("1");
        } else {
            $("input[name='APPROVAL_PO']").val("0");
        }
    }

    function eventEditScheduleSo() {
        if ($("#edit_schedule_so_tmp").prop("checked")) {
            $("input[name='EDIT_SCHEDULE_SO']").val("1");
        } else {
            $("input[name='EDIT_SCHEDULE_SO']").val("0");
        }
    }
//-->
</script>

