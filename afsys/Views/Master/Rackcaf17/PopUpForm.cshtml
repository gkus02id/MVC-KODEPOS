<form role="form" method="POST" id="masterPopupForm" mode="@ViewBag.modify_status" onsubmit="event.preventDefault();">
    <div class="form-group-popup-header">
        <label class="popup-label-group-title">Rack Entry Form</label>
        <input type="hidden" name="AUTONUMBER" id="AUTONUMBER" dataType="autonumber" dataKey="1" value="@ViewBag.autonumber" />
        <input type="hidden" name="SYSTEM_ID" id="SYSTEM_ID" dataType="string" value="@ViewBag.system_id" />
        <input type="hidden" name="RACK_ID" id="RACK_ID" dataType="string" value="@ViewBag.rack_id" />
        <input type="hidden" dataType="string" dataKey="0" name="POPUP_OBJECT_ID" value="0110" nosave />
        <input type="hidden" dataType="string" dataKey="0" name="POPUP_TOP_OBJECT_ID" value="" nosave />
        <input type="hidden" dataType="string" dataKey="0" name="POPUP_TOP_FIELD_NAME" value="" nosave />
    </div>
    <div class="form-content-group-popup">
        <div class="form-content-group-popup-detail">
            <div class="popup-section @ViewBag.layoutCSS">
                <div class="form-group-popup">
                    <label class="popup-label-group-col-md-6 popup-label-item">Rack</label>
                    <div class="popup-input-group-col-md-6">
                        <input id="description" data-id="011002" next-el="warehouse" class="form-control" data-mandatory="true" dataType="string" maxlength="50" validation-string="Rack" name="DESCRIPTION" value="@ViewBag.description" uppercase>
                        <div class="description validation-result" style="display: none;"></div>
                    </div>
                </div>
                <div class="form-group-popup">
                    <label class="popup-label-group-col-md-6 popup-label-item">Warehouse</label>
                    <div class="popup-input-group-col-md-6">
                        <select name="WAREHOUSE_ID" id="warehouse" placeholder="select..." data-mandatory="true" dataType="string" validation-string="Warehouse" class="form-control popup-select-group">
                            @Html.Raw(ViewBag.listWarehouse)
                        </select>
                        <a href="javascript:openPopupForm('0109','subremodalform','subremodal','')" class="form-control new-value-group"><i class="fa fa-plus fa-plus-new-value-group"></i></a>
                    </div>
                </div>
                <!--
                <div class="form-group-popup">
                    <label class="popup-label-group-col-md-6 popup-label-item">Capacity</label>
                    <div class="popup-input-group-col-md-6">
                        <input id="capacity" class="form-control" dataType="string" maxlength="10" validation-string="Capacity" name="CAPACITY" value="">
                    </div>
                </div>
                //-->
                <div class="form-group-popup">
                    <label class="popup-label-group-col-md-6 popup-label-item">Jenis</label>
                    <div class="popup-input-group-col-md-6">
                        <select name="VISIBLE" id="visible" placeholder="select..." dataType="string" validation-string="Jenis" class="form-control">
                            @Html.Raw(ViewBag.listVisible)
                        </select>
                    </div>
                </div>
                <div class="form-group-popup">
                    <label class="popup-label-group-col-md-6 popup-label-item">Status</label>
                    <div class="popup-input-group-col-md-6">
                        <select name="ACTIVE" id="active" placeholder="select..." dataType="string" validation-string="Status" class="form-control">
                            @Html.Raw(ViewBag.listStatus)
                        </select>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="form-group-popup-footer">
        <input type="hidden" dataType="string" name="MODIFY_STATUS" value="@ViewBag.modify_status" nosave>
        <button data-remodal-action="confirm" id="remodal-confirm" class="remodal-confirm">Save</button>
        <button data-remodal-action="cancel" id="remodal-cancel" class="remodal-cancel">Cancel</button>
        <button id="remodal-end" class="remodal-end"></button>
    </div>
</form>

