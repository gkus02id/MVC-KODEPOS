<form role="form" method="POST" id="mCategoryPopupForm" mode="@ViewBag.modify_status" onsubmit="event.preventDefault();">
    <div class="form-group-popup-header">
        <label class="popup-label-group-title">Category Entry Form</label>
        <input type="hidden" name="AUTONUMBER" id="AUTONUMBER" dataType="autonumber" dataKey="1" value="@ViewBag.autonumber" />
        <input type="hidden" name="SYSTEM_ID" id="SYSTEM_ID" dataType="string" data-flag="true" value="@ViewBag.system_id" />
        <input type="hidden" dataType="string" dataKey="0" name="POPUP_OBJECT_ID" value="0102" nosave />
        <input type="hidden" dataType="string" dataKey="0" name="POPUP_TOP_OBJECT_ID" value="0105" nosave />
        <input type="hidden" dataType="string" dataKey="0" name="POPUP_TOP_FIELD_NAME" value="CATEGORY_ID" nosave />
    </div>
    <div class="form-content-group-popup">
        <div class="form-content-group-popup-detail">
            <div class="col-lg-6 left-popup-section" id="form0102-content">
                <div class="subremodal-form-group-popup">
                    <label class="custom-popup-label-group">Code</label>
                    <div class="custom-popup-input-group">
                        <input id="category_code" data-id="010201" next-el="description" class="form-control" data-mandatory="true" dataType="string" maxlength="10" validation-string="Code" name="CATEGORY_CODE" value="@ViewBag.category_code" uppercase>
                        <div class="category_code validation-result" style="display: none;"></div>
                    </div>
                </div>
                <div class="subremodal-form-group-popup">
                    <label class="custom-popup-label-group">Category</label>
                    <div class="custom-popup-input-group">
                        <input id="description" data-id="010202" next-el="remodal-confirm" class="form-control" data-mandatory="true" dataType="string" maxlength="100" validation-string="Category" name="DESCRIPTION" value="@ViewBag.description" uppercase>
                        <div class="description validation-result" style="display: none;"></div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 right-popup-section">
                <div class="panel-body list-container" id="listDataTable">
                    @Html.Raw(ViewBag.listData)
                </div>
            </div>
        </div>
    </div>
    <div class="form-group-popup-footer">
        <input type="hidden" dataType="string" name="MODIFY_STATUS" value="@ViewBag.modify_status" nosave>
        <!--
        <button id="subremodal-new" class="subremodal-confirm">New</button>
        //-->
        <button data-subremodal-action="confirm" id="subremodal-confirm" class="subremodal-confirm">Save</button>
        <button data-subremodal-action="cancel" id="subremodal-cancel" class="subremodal-cancel">Cancel</button>
        <button id="remodal-end" class="remodal-end"></button>
    </div>
</form>
