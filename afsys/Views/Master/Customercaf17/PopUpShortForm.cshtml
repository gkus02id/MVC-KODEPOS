<form role="form" method="POST" id="mCustomerPopupForm" mode="@ViewBag.modify_status" onsubmit="event.preventDefault();">
    <div class="form-group-popup-header">
        <label class="popup-label-group-title">Customer Entry Form</label>
        <input type="hidden" name="AUTONUMBER" id="AUTONUMBER" dataType="autonumber" dataKey="1" value="@ViewBag.autonumber" />
        <input type="hidden" name="SYSTEM_ID" id="SYSTEM_ID" dataType="string" value="@ViewBag.system_id" />
        <input type="hidden" dataType="string" dataKey="0" name="POPUP_OBJECT_ID" value="0122" nosave />
        <input type="hidden" dataType="string" dataKey="0" name="POPUP_TOP_OBJECT_ID" value="0106" nosave />
        <input type="hidden" dataType="string" dataKey="0" name="POPUP_TOP_FIELD_NAME" value="CUSTOMER_ID" nosave />
    </div>
    <div class="form-content-group-popup">
        <div class="form-content-group-popup-detail">
            <div class="col-lg-6 left-popup-section" id="form0122-content">
                <div class="subremodal-form-group-popup">
                    <label class="custom-popup-label-group">Code</label>
                    <div class="custom-popup-input-group">
						<input id="customer_code" data-id="012201" next-el="description" class="form-control" data-mandatory="true" data-type="unique" dataType="string" dataKey="0" maxlength="10" validation-string="Code" name="CUSTOMER_CODE" value="@ViewBag.customer_code" uppercase @ViewBag.readonlyCSS>
                        <div class="customer_code validation-result" style="display: none;"></div>
                    </div>
                </div>
                <div class="subremodal-form-group-popup">
                    <label class="custom-popup-label-group">Name</label>
                    <div class="custom-popup-input-group">
                        <input id="description" data-id="012102" next-el="addresss" class="form-control" data-mandatory="true" dataType="string" maxlength="100" validation-string="Description" name="DESCRIPTION" value="@ViewBag.description" uppercase>
                        <div class="description validation-result" style="display: none;"></div>
                    </div>
                </div>
                <div class="subremodal-form-group-popup">
                    <label class="custom-popup-label-group">Address</label>
                    <div class="custom-popup-input-group">
                        <input id="address" class="form-control" dataType="string" maxlength="100" validation-string="Address" name="ADDRESS" value="@ViewBag.address" uppercase>
                    </div>
                </div>
                <div class="subremodal-form-group-popup">
                    <label class="custom-popup-label-group">Contact Person</label>
                    <div class="custom-popup-input-group">
                        <input id="contact_person" class="form-control" dataType="string" maxlength="50" validation-string="Contact Person" name="CONTACT_PERSON" value="@ViewBag.contact_person" uppercase>
                    </div>
                </div>
                <div class="subremodal-form-group-popup">
                    <label class="custom-popup-label-group">Phone</label>
                    <div class="custom-popup-input-group">
                        <input id="phone" class="form-control" dataType="string" maxlength="50" validation-string="Phone" name="PHONE" value="@ViewBag.phone" uppercase>
                    </div>
                </div>
                <div class="subremodal-form-group-popup">
                    <label class="custom-popup-label-group">Fax</label>
                    <div class="custom-popup-input-group">
                        <input id="fax" class="form-control" dataType="string" maxlength="50" validation-string="Fax" name="FAX" value="@ViewBag.fax" uppercase>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 right-popup-section">
                <div class="panel-body list-container" id="listDataTable">
                    @Html.Raw(ViewBag.listData)
                </div>
            </div>
        </div>
    </div>
    <div class="form-group-popup-footer">
        <input type="hidden" dataType="string" name="MODIFY_STATUS" value="@ViewBag.modify_status" nosave>
        <!--
        <button id="subremodal-new" class="subremodal-confirm">New</button>
        //-->
        <button data-subremodal-action="confirm" id="subremodal-confirm" class="subremodal-confirm">Save</button>
        <button data-subremodal-action="cancel" id="subremodal-cancel" class="subremodal-cancel">Cancel</button>
        <button id="remodal-end" class="remodal-end"></button>
    </div>
</form>
