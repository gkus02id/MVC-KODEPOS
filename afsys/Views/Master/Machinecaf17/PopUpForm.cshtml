    .remodal {
        max-width: 1550px;
    }

    .custom-row {
        padding-bottom:10px!important;
    }

    .row-hide {
        display:none!important;
    }

    .left-po-edit-mode {
        width:120px!important;
    }
    
    .right-po-edit-mode {
        width:507px!important;
    }

    .remodal-close {
        left: 97%;
    }

    .popup-label-group-col-md-6 {
        width: 15% !important;
    }

    .popup-input-group-col-md-6 {
        width: 84% !important;
    }

    th.col-mitem-no {
        width: 3% !important;
    }

    th.col-mitem-name {
        width: 67% !important;
    }

    th.col-link {
        width: 20% !important;
    }

    td.DTCOL_DESCRIPTION {
        text-align: left !important;
    }

    td.DTCOL_QTY {
        text-align: right !important;
    }

    .remodal-bg {
        padding-right: 2px;
        padding-bottom: 4px;
    }

    .upload-button {
        font: inherit;
        display: inline-block;
        overflow: visible;
        min-width: 110px;
        margin: 0;
        padding: 6px 0;
        cursor: pointer;
        -webkit-transition: background 0.2s;
        transition: background 0.2s;
        text-align: center;
        vertical-align: middle;
        text-decoration: none;
        border: 0;
        outline: 0;
        border: #4b4b4b 1px solid;
    }

        .upload-button:hover, .upload-button:focus {
            color: #000 !important;
            background: #fff !important;
            border: #4b4b4b 1px solid;
        }

    .leftinput {
        width: 40% !important;
    }

    .rightlist {
        width: 55% !important;
    }
</style>